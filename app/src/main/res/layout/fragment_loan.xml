<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        android:id="@+id/appbaar"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:subtitleTextColor="@android:color/white"
            app:titleTextColor="@android:color/white">

            <TextView
                android:id="@+id/toolbar_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Record"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />



            <ImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/logoutloan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/ic_exit_to_app_black_24dp"
                android:layout_marginRight="10dp" />


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbaar"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="5dp">
        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/colorAccent"
            app:boxStrokeWidth="2dp"
            >
            <EditText
                android:id="@+id/inputnameperson"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Name"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:inputType="textCapWords"
                android:textColor="@android:color/black" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            app:boxStrokeWidth="2dp"
            >
            <EditText
                android:id="@+id/inputamount"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:hint="Amount"
                android:inputType="number"
                android:textColor="@android:color/black" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorAccent"
        android:layout_marginTop="5dp"
        app:boxStrokeWidth="2dp"
        >

            <EditText
                android:id="@+id/inputtype"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="(lend / borrow)"
                android:inputType="textCapWords"
                android:focusableInTouchMode="false"
                android:layout_marginTop="17dp"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorAccent"
        android:layout_marginTop="5dp"
        app:boxStrokeWidth="2dp"
        >

            <EditText
                android:id="@+id/inputdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:padding="5dp"
                android:focusableInTouchMode="false"
                android:hint="Click here to select return date"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_below="@id/layout">
        <Button
            android:id="@+id/insert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:text="add" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            android:text="Records"
            android:id="@+id/button3"
            />
    </LinearLayout>


</RelativeLayout>

